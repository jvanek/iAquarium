<?xml version="1.0" encoding="utf-8"?>
<xs:schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="poissons">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="poisson">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="NomScientifique" type="xs:string" />
              <xs:element name="NomCommuns">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="NomCommun" />
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
              <xs:element name="Descripteur" />
              <xs:element name="Famille" />
              <xs:element name="Temperature">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="TempMin" type="xs:decimal" />
                    <xs:element name="TempMax" type="xs:decimal" />
                    <xs:element name="TempRepro" type="xs:decimal" />
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
              <xs:element name="Acidite">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="PHMin" type="xs:decimal" />
                    <xs:element name="PHMax" type="xs:decimal" />
                    <xs:element name="PHRepro" type="xs:decimal" />
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
              <xs:element name="Durete">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="GHMin" type="xs:decimal" />
                    <xs:element name="GHMax" type="xs:decimal" />
                    <xs:element name="GHRepro" type="xs:decimal" />
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
              <xs:element name="Taille">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="TailleMale" type="xs:decimal" />
                    <xs:element name="TailleFemelle" type="xs:decimal" />
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
              <xs:element name="EsperanceVie" type="xs:integer" />
              <xs:element name="ZoneDeVie" />
              <xs:element name="Origine" />
              <xs:element name="Description" />
              <xs:element name="Dimorphisme" />
              <xs:element name="Comportement" />
              <xs:element name="Reproduction" />
            </xs:sequence>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>
